    android:shape="rectangle">

    <solid android:color="#FFFFFF" /> <!-- Background color -->
    <corners android:radius="12dp" /> <!-- Rounded corners -->
    <stroke
        android:width="2dp"
        android:color="#4CAF50" /> <!-- Primary color border -->

    <!-- Optional: Add a shadow effect -->
