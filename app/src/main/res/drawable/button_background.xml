<?xml version="1.0" encoding="utf-8"?><!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- When the button is pressed -->
        <shape android:shape="rectangle">
            <solid android:color="@color/accent" /> <!-- Accent color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <!-- Default button state -->
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" /> <!-- Primary color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
